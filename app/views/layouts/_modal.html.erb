<!-- LOGIN-POP-UP-->
<div class="modal fade" id="modal-login">
	<div class="modal-dialog modal-sm">
		<div class="modal-content">
			<div class="modal-header">
				<button class="close" data-dismiss="modal">
					×
				</button>
				<h3>Login</h3>
			</div>
			<div class="modal-body">
				<%= simple_form_for(:user, :url => user_session_path) do |f| %>
				<div class="inputs">
					<div>
						<%= f.label :login, required: false %>
						<br />
						<%= f.email_field :login,:autofocus => true  %>
					</div>

					<div>
						<%= f.label :password, required: false%>
						<br />
						<%= f.password_field :password %>
					</div>

					<% if devise_mapping.rememberable? -%>
					<div>
						<%= f.check_box :remember_me %> <%= f.label :remember_me, required: false%>
					</div>
					<% end %>
									<%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
				<%= link_to "Passwort vergessen?", new_password_path(resource_name) %>
				<br />
				<% end -%>
				</div>
			</div>
			<div class="modal-footer">
				<%= f.button :submit, "Sign in", :class => 'btn btn-primary' %>
				<% end %>
			</div>
		</div>
	</div>
</div>
<!-- LOGIN-POP-UP-->
<div class="modal fade" id="modal-signup">
	<div class="modal-dialog modal-sm">
		<div class="modal-content">
			<div class="modal-header">
				<button class="close" data-dismiss="modal">
					×
				</button>
				<h3>Registieren</h3>
			</div>
			<div class="modal-body">
				<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
				<div>
					<%= f.label :username, required: true %>
					<br />
					<%= f.email_field :username %>
				</div>
				<div>
					<%= f.label :email, required: true %>
					<br />
					<%= f.email_field :email %>
				</div>

				<div>
					<%= f.label :password, required: true %>
					<br />
					<%= f.password_field :password %>
				</div>
			Felder mit * sind Pflichtfelder.
			</div>
			<div class="modal-footer">
				<%= f.button :submit, "Sign in", :class => 'btn btn-primary' %>
				<% end %>
			</div>
		</div>
	</div>
</div>

