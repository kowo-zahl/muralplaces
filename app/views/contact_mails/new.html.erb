<div>
	<h2>Kontaktformular</h2>
</div>
<br>
<br>

<%= simple_form_for @contact_mail do |f| %>

<%= f.input :name, :required => true,label: "Name*",label_html: {class: 'col-md-2 col-md-offset-2'},input_html: {class: 'col-md-5'},wrapper_html: { class: 'row' }, :placeholder => "Ihr Name*" %>
<br>
<br>
<%= f.input :email, :required => true,label: "Email*",label_html: {class: 'col-md-2 col-md-offset-2'},input_html: {class: 'col-md-5'},wrapper_html: { class: 'row' }, :placeholder => "Ihre Email-Adresse*" %>
<br>
<br>
<%= f.input :message, :as => :text, :required => true,label: "Nachricht*",label_html: {class: 'col-md-2 col-md-offset-2'},input_html: {class: 'col-md-5 NOTanEditor',rows: '10'},wrapper_html: { class: 'row' }, :placeholder => "Ihre Nachricht an uns*" %>
<br/>

<div class="col-md-6 col-md-offset-2">
	Die mit * gekennzeichneten Felder sind Pflichtfelder
</div>
<br>
<br>
<br>

<div class="text-center">
	<div>
		Bitte l&ouml;sen Sie folgende Gleichung:
	</div>
	<% number1=(rand() * 10).to_i%>
	<% number2=(rand() * 10).to_i%>
	<%= f.input :captcha, :as =>  :fake ,:label=>number1.to_s+" + "+number2.to_s+" = ", :placeholder => "Ergebnis"%>

	<% answer=number1+number2%>
	<%= f.input :cap,:as => :hid,:label=>false,:input_html=>{:value =>answer.to_s}%>

	<br />
	<br />

	<%= f.button :submit, 'Nachricht senden', :class=> "btn btn-primary" %>
</div>

<% end %>
<br />
<br />
<br />
<div class="container">
Oder Email senden an: kontakt[at]muralplaces.com
</div>
