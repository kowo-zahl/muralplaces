<div class="container">
<div>
	<h2>Kommentar Melden</h2>
</div>
<br>
<br>

<%= simple_form_for @comment_mail do |f| %>

<%= f.input :comment_id, :as => :hidden, label: false %>

<%= f.input :user_id, :as => :hidden, label: false %>
<%= f.input :report_user_id, :as => :hidden, label: false %>

<%= f.input :message, :as => :text, label: "Optionale Nachricht",label_html: {class: 'col-md-2 col-md-offset-2'},input_html: {class: 'col-md-5 NOTanEditor',rows: '10'},wrapper_html: { class: 'row' }, :placeholder => "Optional eine Nachricht anfÃ¼gen." %>
<br/>


<br>
<br>
